
body
	font-family Arial

	input[type="number"]
		width 50px

	div#document

		div#toolbar
			float left
			margin-right 5px

			div
				border solid 1px #000000
				width 20px
				height 20px
				padding 5px
				cursor pointer

		div.rightColumn
			float right

			div#objectList
				border solid 1px #000000
				padding 0px 15px 0px 0px
				overflow auto
				height 50%

				ul
					list-style none
					padding 0px

					li
						cursor pointer
						width 250px
						height 20px
						padding 5px 5px 3px 5px

						img
							float right

					li.selected
							background Highlight

			div#properties
				margin-top 5px
				padding-top 3px
				width 270px
				border solid 1px #000000

				div.tabBar
					width 100%
					height 23px
					border-bottom solid 1px #000000

					div.doChangeTab
						float left
						border solid 1px #000000
						padding 2px
						cursor pointer
						border-top-left-radius 3px
						border-top-right-radius 3px

					div.selected
						border-bottom solid 1px #FFFFFF

				div#properties-content
					overflow auto
					height 300px
					border solid 1px blue
